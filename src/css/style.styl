@import '_partials/variables'
@import '_partials/reset'
@import '_partials/fonts'
@import '_partials/typography'
@import '_partials/utilities'
@import '_partials/buttons'
@import '_partials/nav'
@import '_partials/forms'

.header-video
  width 100%
  height 40rem
  overflow hidden
  display flex
  align-items center
  background black

  .container
    max-width 1600px

  video 
    width 100%

.main-title

  .container
    display flex
    flex-direction column
    align-items center
  
  h1
    margin 0 0 2rem 0

  .button__primary
    margin-right 2rem

.category-cards

  .container
    display flex
    align-items flex-start
    justify-content space-between

  &__card
    background white
    border 1px solid offWhiteBorder
    width 31%
    border-radius 5px
    overflow hidden

    &--text
      padding 2rem 2rem 2.5rem 2rem
      width 100%

    &--image
      position relative
      padding-top 55%
      background lightGrey

      img
        position absolute
        top 0
        left 0
        width 100%

.corporate-events
  padding 0

  .container
    padding-top 5rem
    padding-bottom 5rem
    display flex
    align-items flex-start
    justify-content space-between    
    position relative
    z-index 1

    &::before 
      content ""
      position absolute
      top 0 
      left 0
      width 100% 
      height 100%  
      opacity .4 
      z-index -1 
      background url('/images/crossed-flags.png') no-repeat 100% 38%


  &__left
    max-width 22rem
    margin-right 7rem

  &__right
    flex-grow 1

    p
      margin 0
      font-size 2rem

    .button
      margin 2rem 2rem 0 0

.social-feed-instagram
  width 100%
  display flex
  justify-content space-between
  align-items center
  width 100%

  &-post
    width calc(100% / 6 - 5px)
    padding-top calc(100% / 6 - 5px)
    height auto !important
    background richBlack
    position relative

.newsletter

  .container
    display flex
    align-items center
    justify-content center
    flex-wrap wrap

    h4
      margin 0 4rem 0 0

    form
      display flex

      button
        border-radius 0
        font-size 1.2rem

.footer

  .container
    display flex
    align-items flex-start
    flex-wrap nowrap

  &__column
    width 25%
    padding-right 5rem
    color offWhite

    .red-highlight
      margin-bottom 2rem

    h5
      color white

    ul
      margin-bottom 2rem
    
    a
      font-size 1.6rem
      color white
      text-decoration underline
      display block

    &--contact p
      margin-top 2rem