// @font-face
//   font-family "Open Sans Regular"
//   font-weight 400
//   src url(/fonts/OpenSans-Regular.woff2) format("woff2"),
//       url(/fonts/OpenSans-Regular.woff) format("woff")

*
  font-family sansSerif
  font-size 10px

span 
  font-family inherit
  font-size:  inherit

h1, h2, h3, h4, h5, h6
  font-weight 300
  margin 0 0 1.25rem 0
  font-family 'BigNoodleTitling'
  line-height 1.1
  letter-spacing 0.1rem

h1
  font-size 5.6rem

h2
  font-size 4.2rem

h3
  font-size 3.6rem
  display inline-flex
  flex-wrap wrap
  align-items center

h4
  font-size 2.8rem

h5
  font-size 2.4rem

h6
  font-size 1.6rem

a
  color linkColor

  &:hover
    text-decoration underline
    color linkColorAccent

ul, li, a, p
  margin 0
  line-height 1.4
  font-size 1.6rem

p
  margin 0 0 1.25em 0

.no-break
  white-space nowrap
  font-family inherit

.center
  text-align center

.bold
  font-weight bold

.red
  color primaryColor

span.sticker
  background mainGreen
  padding .5rem 1rem
  margin 1rem 0 1rem 1rem
  color white
  font-family sansSerif
  font-size 1.4rem
  font-weight 700
  box-sizing border-box
  letter-spacing 0
  border-radius 5px