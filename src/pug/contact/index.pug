extends ../_partials/layout

block nav
  +navigation('/contact')

block title
  title  Contact Us | Fast Lane Go Karting Stoke
  
block description
  meta(name="description" content="Call 01782 250 450 or email track@fastlanekarting.co.uk to book a karting package. We're open from 10am until 10:30pm, 7 days a week. Find us at 151 King Street, Stoke-on-Trent, ST4 3ER.")

block content
  section.grey.contact
    .container
      .content-block
        div
          h3 Contact Us
          .red-highlight
          h5 Call Us
          p 01782 250 450
          h5 Email Us
          p track@fastlanekarting.co.uk
          a.button.button__primary(href='/#packages' target='_blank') Book Online
          h5 Social Media
          .contact__social
            a(href='https://www.facebook.com/fastlanekartingindoor' target='_blank')
              img(src='/images/social-media/facebook.svg' alt='Facebook Icon')
            a(href='https://www.instagram.com/fastlanekarting_stoke/' target='_blank')
              img(src='/images/social-media/instagram.svg' alt='Instagram Icon')
        div
          h3 Opening Hours
          .red-highlight
          ul
            li 
              span Monday
              span 10:00am - 10:30pm
            li 
              span Tuesday
              span 10:00am - 10:30pm
            li 
              span Wednesday
              span 10:00am - 10:30pm
            li 
              span Thursday
              span 10:00am - 10:30pm
            li 
              span Friday
              span 10:00am - 10:30pm
            li 
              span Saturday
              span 9:00am - 10:30pm
            li 
              span Sunday
              span 10:00am - 10:30pm
      

  iframe.google-maps(
    width="100%" 
    height="450"
    frameborder="0" 
    style="border:0" 
    src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJp3iP_LxpekgRJhrb65GE7V0&key=AIzaSyDy2rP4t2jzZ5Gj5dI83xCgi6DY6hzO-Ss" 
    allowfullscreen
  )